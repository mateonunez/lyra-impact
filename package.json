{
  "name": "@mateonunez/lyra-impact",
  "version": "0.0.1-beta.2",
  "description": "Create a Lyra database from an API",
  "main": "./dist/node/cjs/index.js",
  "module": "./dist/node/esm/index.js",
  "types": "./dist/node/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "pnpm run format && eslint . --ext .js,.ts",
    "prepare": "husky install",
    "test": "c8 -c ./src/tests/config/c8.json tap --rcfile=./src/tests/config/tap.yml --no-check-coverage ./src/tests/**/*.test.ts",
    "build:node:cjs": "tsc --project tsconfig.node.cjs.json",
    "build:node:module": "tsc --project tsconfig.node.esm.json",
    "build:browser": "esbuild src/index.ts --bundle --outfile=dist/browser/index.js --minify --sourcemap --external:./node_modules/*",
    "build": "rimraf ./dist && pnpm build:node:module && pnpm build:node:cjs && pnpm build:browser",
    "just": "ts-node src/index.ts"
  },
  "keywords": [
    "lyra",
    "import json",
    "full-text search"
  ],
  "author": {
    "email": "mateonunez95@gmail.com",
    "name": "Mateo Nunez",
    "url": "https://github.com/mateonunez"
  },
  "license": "MIT",
  "lint-staged": {
    "*": "pnpm lint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@nearform/lyra": "^0.0.5"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.33.1",
    "c8": "^7.12.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "phin": "^3.6.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "node_modules",
      "**/dist/**"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}